<h1>新的话题</h1>

<% form_for(@topic) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label '标题' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label '内容' %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', topics_path %>